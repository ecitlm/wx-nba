/* pages/news_list/news_list.wxss */

.news-list {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #e3e3e3;
}

.list-img {
  margin-right: 30rpx;
}

.list-img image {
  width: 185rpx;
  height: 140rpx;
}

.news-info {
  font-size: 30rpx;
  padding-bottom: 2px;
}

.news-info .date {
  font-size: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.comment-coount{
  width: 90rpx;
  height: 60rpx;
  color: #666;
  background: url("data:image/png;base64,") left no-repeat;
  background-size: 28rpx;
  text-align: right;
}